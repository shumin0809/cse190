<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cse190.petcafe"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationSingleton"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ActivityNewPost"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ActivityEditProfile"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ActivityFindFriends"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ActivityProfile"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ActivityMyFriends"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ActivitySearchPosts"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ActivityMyFriendsPosts"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ActivityBlog"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.facebook.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".ui.ActivityMyFriendsProf"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".ActivityinitialSetup"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_activityinitial_setup"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.ActivityChat"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_activity_chat"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.ActivityDialog"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_actvitiy_dialog"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cse190.petcafe.ui.ActivityFriendRequestReject"
            android:label="@string/title_activity_activity_friend_request_reject" >
        </activity>
    </application>

</manifest>