<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cse190.petcafe"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationSingleton"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cse190.petcafe.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cse190.petcafe.ui.ActivityNewPost"
            android:noHistory="true" />
        <activity
            android:name="com.cse190.petcafe.ui.ActivityEditProfile"
            android:noHistory="true" />
        <activity
            android:name="com.cse190.petcafe.ui.ActivityFindFriends"
            android:noHistory="true" />
        <activity
            android:name="com.cse190.petcafe.ui.ActivityProfile"
            android:noHistory="true" />
        <activity
            android:name="com.cse190.petcafe.ui.ActivityMyFriends"
            android:noHistory="true" />
        <activity
            android:name="com.cse190.petcafe.ui.ActivitySearchPosts"
            android:noHistory="true" />
        <activity
            android:name="com.cse190.petcafe.ui.ActivityMyFriendsPosts"
            android:noHistory="true" />
        <activity
            android:name="com.cse190.petcafe.ui.ActivityBlog" />
		<activity
            android:name="com.facebook.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".ActivityinitialSetup"
            android:label="@string/title_activity_activityinitial_setup" >
        </activity>
        <activity
            android:name=".ui.ActivityChat"
            android:label="@string/title_activity_activity_chat" >
        </activity>
        <activity
            android:name="com.cse190.petcafe.ui.ActivityDialog"
            android:label="@string/title_activity_actvitiy_dialog" >
        </activity>
    </application>

</manifest>