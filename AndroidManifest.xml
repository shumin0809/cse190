<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cse190.petcafe"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ApplicationSingleton"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/global_tracker" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Users -->
        <activity
            android:name=".ui.ActivityEditProfile"
            android:noHistory="true" />
        <activity
            android:name=".ui.ActivityProfile"
            android:noHistory="true" />
        <!-- Friends -->
        <activity
            android:name=".ui.ActivityMyFriends"
            android:noHistory="true" />
        <activity
            android:name=".ui.ActivityFindFriends"
            android:launchMode="singleTask" />
        <!-- Posts -->
        <activity
            android:name=".ui.ActivityNewPost"
            android:noHistory="true" />
        <activity
            android:name=".ui.ActivityViewPost"
            android:label="@string/title_activity_activity_viewpost"
            android:noHistory="true" />
        <!-- post lists -->
        <activity
            android:name=".ui.ActivitySearchPosts"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.ActivityMyFriendsPosts"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.ActivityMyBlog"
            android:label="@string/title_activity_activity_my_blog"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.ActivityBlog"
            android:launchMode="singleTask" />
        <!-- init -->
        <activity
            android:name="com.facebook.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".ActivityinitialSetup"
            android:label="@string/title_activity_activityinitial_setup" >
        </activity>
        <!-- chat -->
        <activity
            android:name=".ui.ActivityChat"
            android:label="@string/title_activity_activity_chat" >
        </activity>
        <activity
            android:name=".ui.ActivityDialog"
            android:label="@string/title_activity_actvitiy_dialog" >
        </activity>
    </application>

</manifest>
