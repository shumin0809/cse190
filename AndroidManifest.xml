<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cse190.petcafe"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ActivityNewPost"
            android:noHistory="true" />
        <activity
            android:name=".ui.ActivityEditProfile"
            android:noHistory="true" />
        <activity
            android:name=".ui.ActivityFindFriends"
            android:noHistory="true" />
        <activity
            android:name=".ui.ActivityProfile"
            android:noHistory="true" />
        <activity
            android:name=".ui.ActivityMyFriends"
            android:noHistory="true" />
        <activity
            android:name=".ui.ActivitySearchPosts"
            android:noHistory="true" />
        <activity
            android:name=".ui.ActivityMyFriendsPosts"
            android:noHistory="true" />
        <activity
            android:name=".ui.ActivitySinglePost"
            android:label="@string/title_activity_activity_single_post" >
        </activity>
        <activity
            android:name="com.cse190.petcafe.ui.ActivityMyBlog"
            android:label="@string/title_activity_activity_my_blog" >
        </activity>
    </application>

</manifest>